#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
  &kp TAB  &kp Q  &kp W     &kp E  &kp R      &kp T      &kp Y  &kp U       &kp I    &kp O     &kp P     &kp LEFT_ALT
&kp LCTRL  &kp A  &kp S     &kp D  &kp F      &kp G      &kp H  &kp J       &kp K    &kp L  &kp SEMI          &kp SQT
&kp LSHFT  &kp Z  &kp X     &kp C  &kp V      &kp B      &kp N  &kp M   &kp COMMA  &kp DOT  &kp FSLH  &kp RIGHT_SHIFT
                         &kp LGUI  &mo 1  &kp SPACE    &kp RET  &mo 2  &kp ESCAPE
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
  &kp TAB     &bootloader    &kp C_VOLUME_UP    &kp C_MUTE    &bt BT_CLR  &bt BT_SEL 0        &kp HOME      &kp PG_DN     &kp PG_UP       &kp END        &trans           &trans
 &kp CAPS  &kp C_PREVIOUS  &kp C_VOLUME_DOWN    &kp C_NEXT  &bt BT_SEL 1  &bt BT_SEL 2        &kp LEFT       &kp DOWN        &kp UP     &kp RIGHT        &trans           &trans
&kp LSHFT    &kp NUMBER_1       &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp NUMBER_5    &kp NUMBER_6   &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp NUMBER_0  &kp RIGHT_SHIFT
                                                  &kp LGUI        &trans     &kp SPACE         &kp RET  &kp BACKSPACE       &kp DEL
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
  &kp TAB  &trans  &kp F10    &kp F7  &kp F8     &kp F9       &kp TILDE    &kp K_COPY  &kp K_PASTE    &trans         &trans   &kp BSPC
 &kp CAPS  &trans  &kp F11    &kp F4  &kp F5     &kp F6       &kp UNDER  &kp KP_EQUAL     &kp LBKT  &kp RBKT  &kp BACKSLASH  &kp GRAVE
&kp LSHFT  &trans  &kp F12    &kp F1  &kp F2     &kp F3    &kp KP_MINUS      &kp PLUS     &kp LBRC  &kp RBRC       &kp PIPE  &kp TILDE
                            &kp LGUI  &trans  &kp SPACE         &kp RET        &trans       &trans
            >;
        };
    };
};
